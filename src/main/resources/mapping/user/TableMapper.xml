<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.prac.onlinesql.mapper.TableMapper">

	<select id="getTable" resultType="com.prac.onlinesql.vo.TableVO">
		SELECT
			`TABLE_SCHEMA` dbName,
			`table_name` tableName,
			`table_type` tableType,
			`engine` engine,
			`table_rows` rows
		FROM
			TABLES
		<if test="dbName != null">
			WHERE `TABLE_SCHEMA` = #{dbName}
		</if>
		limit #{page},#{limit}
	</select>
	
 	<select id="queryTableTotal" resultType="int">
		SELECT
			count(1)
		FROM
			TABLES
		<if test="dbName != null">
			WHERE `TABLE_SCHEMA` = #{dbName}
		</if>
	</select>
	 
	<insert id="save" parameterType="io.renren.entity.SysOssEntity" useGeneratedKeys="true" keyProperty="id">
		insert into sys_oss
		(
			`url`, 
			`create_date`
		)
		values
		(
			#{url}, 
			#{createDate}
		)
	</insert>
	 
	<update id="update" parameterType="io.renren.entity.SysOssEntity">
		update sys_oss 
		<set>
			<if test="url != null">`url` = #{url}, </if>
			<if test="createDate != null">`create_date` = #{createDate}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="deleteBatch">
		delete from sys_oss where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>